<form action="<%= locals.page ? `/${page.path}/edit` : '/create' %>" method="POST">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" placeholder="Enter the title for this page here" value="<%= locals.page ? page.title : '' %>" />
        <label for="body">Body</label>
        <textarea id="body" name="body" class="body"><% if (locals.page) { %><%= page.body %><% } %></textarea>
        <label for="msg">Message</label>
        <input type="text" id="msg" name="msg" placeholder="A short description of the change that youâ€™re making" value="<%= locals.page ? null : 'Initial text' %>" />
        <p class="actions">
          <button><% if (locals.page) { %>Save Changes<% } else { %>Create Page<% } %></button>
        </p>
      </form>