<header>
      <nav>
      <% if (locals.isLoggedIn) { %>
        <% if (locals.char && locals.perspective === 'character') { %>
        <a href="<%= char.path %>" class="pov"><%= char.name %></a>
        <% } else if (locals.perspective === 'loremaster') { %>
        <a href="/profile" class="pov">Loremaster</a>
        <% } else { %>
        <span class="pov">Public</span>
        <% } %>
        <ul>
          <li><a href="/profile">Your Profile</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      <% } else { %>
        <span class="pov">Public</span>
        <ul>
          <li class="status"><em>Log in with:</em></li>
          <li><a href="/login/google">Google</a></li>
          <li><a href="/login/discord">Discord</a></li>
        </ul>
      <% } %>
      </nav>
      <form action="/search" method="GET" class="search">
        <input type="search" name="q" placeholder="Search for..." value="<%= locals.query ? query : '' %>" />
        <button>Search</button>
      </form>
      <h1><%- title %></h1>
    </header>