<!DOCTYPE html>
<html>
  <%- include('includes/head', { title, skin }) %>
  <body>
  <%- include('includes/header', { isLoggedIn, char, title: `${page.title} â€” Revision History` }) %>
  <nav class="page">
    <li><a href="/<%= page.path %>">Read</a></li>
    <% if (isLoggedIn) { %>
    <li><a href="/<%= page.path %>/edit">Edit</a></li>
    <% } %>
    <li class="active">History</li>
  </nav>
  <main>
    <form action="/<%= page.path %>/compare" method="POST">
      <table>
        <tbody>
          <% for (const version of versions) { %>
          <tr>
            <td><input type="radio" name="a" value="<%= version._id %>" /></td>
            <td><input type="radio" name="b" value="<%= version._id %>" /></td>
            <td>
              <%= version.msg %><br />
              <small><a href="/<%= page.path %>/<%= version._id %>"><%= formatDate(version.timestamp) %></a></small>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <p class="actions">
        <button>Compare</button>
      </p>
    </form>
  </main>
  <%- include('includes/footer') %>
  </body>
</html>
