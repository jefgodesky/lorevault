{
  "name": "lorevault",
  "version": "1.0.0",
  "description": "A wiki for situations where you care about who knows what.",
  "type": "module",
  "license": "CC-BY-SA-4.0",
  "homepage": "https://lorevault.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jefgodesky/lorevault.git"
  },
  "bugs": {
    "url": "https://github.com/jefgodesky/lorevault/issues"
  },
  "author": {
    "name": "Jason Godesky",
    "email": "jefgodesky@gmail.com"
  },
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "mocha",
    "dev": "npm-run-all -p dev:serve dev:css",
    "dev:serve": "nodemon index.js",
    "dev:css": "npm-run-all -p css:build css:watch css:sync",
    "css:build": "npm-run-all css:compile css:postcss",
    "css:compile": "node sass.js",
    "css:postcss": "postcss public/css/*.css --use autoprefixer --dir public/css",
    "css:watch": "chokidar './styles/**/index.scss' './styles/**/**/_*.scss' './games/**/*.scss' -i --command 'npm run css:compile'",
    "css:sync": "browser-sync start --proxy localhost:8080 --files 'public/css/*.css' 'views/*.ejs' 'views/**/*.ejs' --no-ui --no-inject-changes"
  },
  "dependencies": {
    "aws-sdk": "^2.983.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "connect-mongo": "^4.5.0",
    "cookie-parser": "^1.4.5",
    "dayjs": "^1.10.6",
    "deepmerge": "^4.2.2",
    "diff": "^5.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "http-errors": "^1.7.2",
    "mongoose": "^6.0.3",
    "mongoose-slug-generator": "^1.0.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "multer-s3": "^2.9.0",
    "rehype-autolink-headings": "^6.1.0",
    "rehype-format": "^4.0.0",
    "rehype-raw": "^6.1.0",
    "rehype-sanitize": "^5.0.0",
    "rehype-slug": "^5.0.0",
    "rehype-stringify": "^9.0.2",
    "remark-gfm": "^2.0.0",
    "remark-parse": "^10.0.0",
    "remark-rehype": "^9.0.0",
    "remark-sectionize": "^1.1.1",
    "smartquotes": "^2.3.2",
    "unified": "^10.1.0"
  },
  "devDependencies": {
    "browser-sync": "^2.27.5",
    "chai": "^4.3.4",
    "commander": "^8.1.0",
    "mocha": "^9.1.1",
    "mongodb-memory-server": "^7.3.6",
    "normalize-scss": "^7.0.1",
    "sass": "^1.39.0"
  }
}
